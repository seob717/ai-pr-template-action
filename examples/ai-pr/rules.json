{
  "rules": [
    {
      "pattern": "(PROJ-\\d+)",
      "targetSection": "## Jira Tickets"
    },
    {
      "pattern": "#(\\d+)",
      "targetSection": "## GitHub Issues"
    }
  ],
  "templateSelection": {
    "rules": [
      {
        "condition": "pr_title",
        "pattern": "^\\[HOTFIX\\]|^HOTFIX:",
        "template": "hotfix",
        "priority": 1
      },
      {
        "condition": "pr_title", 
        "pattern": "^\\[FEAT\\]|^feat:|^feature:",
        "template": "feature",
        "priority": 2
      },
      {
        "condition": "branch",
        "pattern": "hotfix/|fix/",
        "template": "hotfix", 
        "priority": 3
      },
      {
        "condition": "branch",
        "pattern": "feature/|feat/",
        "template": "feature", 
        "priority": 4
      },
      {
        "condition": "commit",
        "pattern": "^fix:|^hotfix:",
        "template": "hotfix",
        "priority": 5
      },
      {
        "condition": "commit",
        "pattern": "^feat:|^feature:",
        "template": "feature",
        "priority": 6
      }
    ],
    "defaultTemplate": "feature"
  }
}